@model User  // Bu sayede property'lere ulaşıyorum 
@{
	ViewData["Title"] = "Tag Helper Usage";
}

<div class="row justify-content-center mt-5">
	<div class="col-sm-4">
		<div class="card">
			<div class="card-header">
				<h3>TAG HELPER PAGE</h3>
			</div>
			<div class="card-body">
				<form asp-action="TagHelpers" asp-controller="User" method="post">
					<div class="form-group">
						<label asp-for="Username">Username: </label>
						<input type="text" class="form-control mb-3" asp-for="Username"/>
					</div>

					<div class="form-group">
						<label asp-for="Password">Password: </label>
						<input type="password" class="form-control mb-3" asp-for="Password" />
					</div>

					<div class="form-group">
						<label asp-for="FirstName">First Name: </label>
						<input type="text" class="form-control mb-3" asp-for="FirstName" />
					</div>

					<div class="form-group">
						<label asp-for="LastName">Last Name: </label>
						<input type="text" class="form-control mb-3" asp-for="LastName" />
					</div>

					<div class="form-group">
						<label asp-for="RememberMe">Remember me: </label>
						<input type="checkbox" class="mb-3" asp-for="RememberMe" />
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block mb-3" >Login</button>
					</div>

					<div class="form-group">
						<a asp-action="ForgotPassword" ass="mb-3" asp-controller="User">Forgot my password</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
