@model Product  // Bu sayede property'lere ulaşıyorum
@{
	ViewData["Title"] = "Product Page";
}

<div class="row justify-content-center mt-5">
	<div class="col-sm-6 col-md-4">
		<div class="card">
			<div class="card-header">
				<h3>PRODUCT PAGE</h3>
			</div>
			<div class="card-body">
				<form asp-action="HelpersForProducts" asp-controller="Product" method="post">
					<div class="form-group">
						<label asp-for="ProductName">Product Name: </label>
						<input type="text" class="form-control mb-3" asp-for="ProductName" />
					</div>

					<div class="form-group">
						<label asp-for="Price">Price: </label>
						<input type="number" class="form-control mb-3" asp-for="Price" />
					</div>

					<div class="form-group">
						<label asp-for="Quantity">Quantity: </label>
						<input type="number" class="form-control mb-3" asp-for="Quantity" />
					</div>

					<div class="form-group">
						<label asp-for="Category">Category Name: </label>
						<input type="text" class="form-control mb-3" asp-for="Category" />
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-info btn-block mb-3">Add to stock</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>